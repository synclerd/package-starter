{
    "compilerOptions": {
        "module": "commonjs",
        "skipLibCheck": true,
        "lib": ["ES2020"],
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "./src"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": ["./node_modules","**/*.test.ts"]
}